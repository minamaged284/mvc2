@using Microsoft.AspNetCore.Identity

@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<h1>SignIn</h1>

<form asp-action="SignIn">

	<input class="text " asp-for="Email" placeholder="Email" required="">
	<span asp-validation-for="Email" class="text-danger"></span>

	<input class="text" asp-for="Password" placeholder="Password" required="">
	<span asp-validation-for="Password" class="text-danger"></span>





	<div class="wthree-text">
		<label class="anim">
			<input class="" asp-for="RememberMe" required="">

			<span>Remember me</span>
		</label>
		<div class="clear"> </div>

		<a asp-action="ForgetPassword"> Forget password </a>
	</div>

	<input type="submit" value="SIGNIN">
</form>
<p> Have an Account? <a asp-action="SignUp"> Register Now!</a></p>


@section Validation {
	<partial name="_ValidationScriptsPartial">

	</partial>

}

