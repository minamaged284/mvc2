@using Microsoft.AspNetCore.Identity
@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<h1>SignUp</h1>



<form  asp-action="SignUp">

	<input class="text " asp-for="FName" placeholder="FName" required="">
	<span asp-validation-for="FName" class="text-danger"></span>

	<input class="text " asp-for="LName" placeholder="LName" required="">
	<span asp-validation-for="LName" class="text-danger"></span>


				<input class="text " asp-for="Email" placeholder="Email" required="">
	<span asp-validation-for="Email" class="text-danger"></span>

				<input class="text" asp-for="Password" placeholder="Password" required="">
	<span asp-validation-for="Password" class="text-danger"></span>

				<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
	<span asp-validation-for="ConfirmPassword" class="text-danger"></span>

				<div class="wthree-text">
					<label class="anim">
						<input class="form-check" asp-for="IsAgree" required="">
			<span asp-validation-for="IsAgree" class="text-danger"></span>

						<span>I Agree To The Terms & Conditions</span>
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" value="SIGNUP">
</form>
<p>Don't have an Account? <a asp-action="SignIn"> Login Now!</a></p>


@section Validation {
	<partial name="_ValidationScriptsPartial">

	</partial>

}